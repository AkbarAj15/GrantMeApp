<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view2"
        android:layout_width="179dp"
        android:layout_height="110dp"
        android:background="@drawable/button_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="165dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2">

        <ImageView
            android:id="@+id/konfiruser"
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="138dp"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="7dp"
            android:rotationY="180"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.067"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.043"
            tools:srcCompat="@drawable/tombol_back" />

        <TextView
            android:layout_width="114dp"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="65dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Kamu sebagai?"
            android:textColor="#161C2B"
            android:textSize="10sp" />

        <RadioGroup
            android:layout_width="127dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="0dp">

            <RadioButton
                android:id="@+id/radioButtonPenyedia"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:fontFamily="@font/poppins"
                android:text="Penyedia"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/radioButtonPenerima"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:fontFamily="@font/poppins"
                android:text="Penerima"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </RadioGroup>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>